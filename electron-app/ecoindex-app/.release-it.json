{
    "$schema": "https://unpkg.com/release-it/schema/release-it.json",
    "git": {
        "commitMessage": "chore: release v${version}",
        "tagName": "electron-v${version}"
    },
    "github": {
        "release": true,
        "autoGenerate": true,
        "releaseName": "Release Electron-app ${version}",
        "assets": [
            "./out/make/zip/darwin/arm64/*.zip",
            "./out/make/*.dmg",
            "./out/make/zip/win32/arm64/*.zip",
            "./out/make/squirrel.windows/arm64/*.exe"
        ]
    },
    "hooks": {
        "before:bump": "rm -rf ./out",
        "after:bump": "npm run make -- --platform=win32 && npm run make -- --plateform=darwin",
        "after:git:release": "echo After git push, before github release",
        "after:release": "echo Successfully released ${name} v${version} to ${repo.repository}."
    },
    "npm": {
        "publish": false
    },
    "plugins": {
        "@release-it/conventional-changelog": {
            "preset": {
                "name": "angular"
            },
            "infile": "CHANGELOG.md"
        }
    }
}
